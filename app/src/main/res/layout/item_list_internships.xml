<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_internships"
    android:layout_marginTop="10dp"
    android:paddingTop="20dp"
    android:background="@drawable/shape_rectangle_radius">



    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_keyword"
        />

    <TextView
        android:id="@+id/tv_name_poste"
        android:layout_marginTop="10dp"
        android:text=" Developer"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_keyword"
        app:layout_constraintStart_toEndOf="@id/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_marginTop="10dp"
        android:text="We are an online shop of Italian, Spanish, and Portuguese tiles"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_poste"
        app:layout_constraintStart_toEndOf="@id/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_period"
        android:layout_marginTop="15dp"
        android:text="3 Month"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_calendar"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_payment"
        android:layout_marginTop="15dp"
        android:text="paid"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toEndOf="@id/tv_period"
        />

    <TextView
        android:id="@+id/tv_salary"
        android:layout_marginTop="15dp"
        android:text="Salary"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_money"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_see_more"
        android:layout_marginTop="20dp"
        android:text="See more"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginEnd="30dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_salary"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>