<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailToVerifyFileActivity">
    <TextView
        android:id="@+id/tv_file_cadre_pratique"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:text="file cadre pratique"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btn_accepte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/Dark_Green"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_file_cadre_pratique"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/Dark_Green"
        android:text="Accept"
        android:textColor="@color/Dark_Green"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_file_cadre_pratique"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_refuse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Dark_Red"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:text="Refuse"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_file_cadre_pratique"
        app:layout_constraintStart_toEndOf="@id/btn_accepte"
        />
    <TextView
        android:id="@+id/txt_upload_file_sign"
        android:layout_marginTop="20dp"
        android:text="return the file"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="invisible"
        android:drawableLeft="@drawable/icon_description"
        android:paddingStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_accepte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>