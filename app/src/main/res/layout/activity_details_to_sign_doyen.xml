<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailsToSignDoyenActivity">
    <TextView
        android:id="@+id/tv_file_sign_doyen"
        android:layout_marginTop="40dp"
        android:text="sign file "
        android:visibility="invisible"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:drawablePadding="10dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btn_upload_file_sign"
        android:layout_marginTop="20dp"
        android:text="upload file sign"
        android:gravity="center"
        android:visibility="invisible"
        android:backgroundTint="@color/Dark_Red"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:drawablePadding="10dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_file_sign_doyen"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>