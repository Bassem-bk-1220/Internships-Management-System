<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_Green"
    tools:context=".SearchFragment">


    <EditText
        android:id="@+id/et_keyword"
        android:layout_marginTop="60dp"
        android:hint="Key Word"
        android:background="@drawable/textview_background"
        android:layout_marginStart="10dp"
        android:paddingLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <EditText
        android:id="@+id/et_payment"
        android:layout_marginTop="60dp"
        android:background="@drawable/textview_background"
        android:layout_marginStart="10dp"
        android:paddingLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_money"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_keyword"
        />

    <Spinner
        android:id="@+id/spinner_pay"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/et_payment"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_internships"
        tools:itemCount="2"
        />





</androidx.constraintlayout.widget.ConstraintLayout>