<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_Green"
    tools:context=".RegisterActivity">
    <EditText
        android:id="@+id/et_fullname"
        android:layout_marginTop="60dp"
        android:hint="Fullname"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_fullname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
       <EditText
        android:id="@+id/et_occupation"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_profile"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/spinner_occupation"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_occupation"
        app:layout_constraintEnd_toEndOf="@+id/et_occupation"
        app:layout_constraintStart_toStartOf="@+id/et_occupation" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_marginTop="30dp"
        android:hint="Phone"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_occupation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/edt_password"
        android:layout_marginTop="30dp"
        android:hint="password"
        android:inputType="textPassword"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_lock"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/btn_send_email"
        android:layout_marginTop="40dp"
        android:background="@drawable/textview_background"
        android:text="Send Email"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/Dark_Red"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>