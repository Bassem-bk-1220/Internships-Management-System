<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rectangle_radius">

    <ImageView
        android:id="@+id/img_logo_company"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_keyword"
        />

    <TextView
        android:id="@+id/tv_name_poste"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:text="Web Developer"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_logo_company"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="30dp"
        android:text="Description de l'emploi:"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_marginTop="10dp"
        android:text="We are an online shop of Italian, Spanish, and Portuguese tiles"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_title_exigence"
        android:layout_marginTop="30dp"
        android:text="Exigences de l'emploi:"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_description_req"
        android:layout_marginTop="10dp"
        android:text="We are an online shop of Italian, Spanish, and Portuguese tiles"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_exigence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_period"
        android:layout_marginTop="30dp"
        android:text="3 Month"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_req"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_payment"
        android:layout_marginTop="30dp"
        android:text="paid"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_req"
        app:layout_constraintStart_toEndOf="@id/tv_period"
        />

    <TextView
        android:id="@+id/tv_salary"
        android:layout_marginTop="30dp"
        android:text="Salary"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_req"
        app:layout_constraintStart_toEndOf="@id/tv_payment"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_apply"
        android:layout_marginTop="20dp"
        android:text="postule"
        android:background="@drawable/edittext_background"
        android:backgroundTint="@color/Dark_Red"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_salary"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>