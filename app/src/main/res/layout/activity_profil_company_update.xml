<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_Green"
    tools:context=".Activity.UpdateProfilCompanyActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/logo_profile_company"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile_picture"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_company_name"
        android:layout_marginTop="10dp"
        android:hint="Name Of Company"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/logo_profile_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_email_company"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_company_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_address"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_location"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_field"
        android:layout_marginTop="10dp"
        android:hint="Field"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icon_material_domain"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_description_company"
        android:layout_marginTop="10dp"
        android:hint="@string/description"
        android:background="@drawable/textview_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:drawableLeft="@drawable/icon_description"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/btn_save_data_comp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_background"
        android:text="Save"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/Dark_Green"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/et_description_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>